<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trainingList">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/arm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Poses For Your Arms"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_below="@+id/arm_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/yogalist1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/text1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card_1">
                    <TextView
                        android:id="@+id/yoga_1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Virabhadrasana"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/yoga_1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 min | Beginner"
                        android:layout_below="@+id/yoga_1a" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/text1a"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/yogalist2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/text2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card_2">
                    <TextView
                        android:id="@+id/yoga_2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Adho Mukha Svanasana"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/yoga_2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 min | Beginner"
                        android:layout_below="@+id/yoga_2a" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/text2a"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/yogalist3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/text3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card_3">
                    <TextView
                        android:id="@+id/yoga_3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bakasana"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/yoga_3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 mins | Advanced"
                        android:layout_below="@+id/yoga_3a" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>