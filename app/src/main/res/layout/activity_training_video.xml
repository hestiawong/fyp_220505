<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".trainingVideo">

    <ScrollView
        android:layout_below="@+id/arm_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">
                <TextView
                    android:id="@+id/yoga_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virabhadrasana"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/text_yoga"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yoga_name"
                    android:layout_marginTop="5dp"
                    android:text="Strengthen Your Arms, Shoulders, Thighs and Back Muscles"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/video1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/video"
                android:scaleType="centerCrop"
                android:layout_below="@+id/details"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/video1">

                <TableLayout
                    android:id="@+id/table_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">
                    <TableRow>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="1"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Beginner"
                            android:textSize="25sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Avg. Minutes" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Level" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Benefits"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/table_1"/>
                <TableLayout
                    android:id="@+id/table_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/benefit"
                    android:layout_marginTop="5dp"
                    android:stretchColumns="1">
                    <TableRow>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/check_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Improves blood circulation"
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/check_icon" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="  Improves your respiration, Relieves stress "
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/check_icon" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="  Reduces stiffness in your shoulders "
                            android:textSize="15sp" />
                    </TableRow>
                </TableLayout>

                <!--<View
                    android:id="@+id/linea"
                    android:background="#000000"
                    android:layout_width = "match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/table_2"/>-->

                <HorizontalScrollView
                    android:id="@+id/yogacardview"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:fillViewport="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/table_2">

                    <LinearLayout
                        android:id="@+id/field1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@+id/text3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/step1"
                            android:layout_width="250dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="15dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Step 1 of 4"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Stand straight in mountain pose. Keep your legs about 3 to 4 feet apart."
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/step2"
                            android:layout_width="250dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            app:cardCornerRadius="15dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Step 2 of 4"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Now raise your both arms parallel to the floor and turn your head to the left."
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/step3"
                            android:layout_width="250dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            app:cardCornerRadius="15dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Step 3 of 4"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Now bend your left knee and make a 90° angle. Keep the angle of your arms and hips same, 180°."
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/step4"
                            android:layout_width="250dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            app:cardCornerRadius="15dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Step 4 of 4"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Keep your head straight to the left and gaze at your front. Hold this pose for few seconds. Then repeat on the other side."
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yogacardview"
                    android:layout_marginTop="15dp"
                    android:text="Tip: It can be difficult to keep the back heel grounded, so you could position yourself near a wall
                    and concentrate on keeping it grounded by pushing it against the wall."/>-->


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>